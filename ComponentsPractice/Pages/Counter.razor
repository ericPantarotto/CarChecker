@page "/counter"

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @CurrentCount</p>

<button class="btn btn-primary" @onclick="() => 
    { 
        IncrementCount();
        OnCounterChanged.InvokeAsync(CurrentCount); 
        
    }"
    >Click me
</button>
<button class="btn btn-secondary" @onclick="OnClearRequested">Cancel</button>

@code {
    [Parameter] public int CurrentCount { get; set; }
    [Parameter] public EventCallback<int> OnCounterChanged { get; set; }
    [Parameter] public EventCallback OnClearRequested { get; set; }

    private void IncrementCount()
    {
        CurrentCount++;
    }
}
